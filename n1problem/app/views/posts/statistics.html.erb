<h1>Post Statistics</h1>

<table>
  <thead>
    <tr>
      <th>Post ID</th>
      <th>Post Description</th>
      <th>Number of Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.content %></td>
        <td><%= post.comments_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
